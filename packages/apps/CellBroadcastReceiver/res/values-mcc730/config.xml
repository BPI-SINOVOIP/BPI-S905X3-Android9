<resources>
    <!-- Whether to enable CMAS settings (United States) -->
    <!-- No need to show this for Chilean users -->
    <bool name="show_cmas_settings">false</bool>

    <string-array name="public_safety_messages_channels_range_strings" translatable="false">
        <!-- Channel 919 and 921 are required by Chile -->
        <item>0x0397:type=other, emergency=false</item>
        <item>0x0399:type=other, emergency=false</item>
    </string-array>

    <!-- Always play alert at full volume for Chilean users -->
    <bool name="use_full_volume">true</bool>
    <!-- Append date-time to the alert title -->
    <bool name="show_date_time_title">true</bool>
    <!-- Emergecny alert tone duration set to 5 minutes for Chilean users -->
    <integer name="alert_duration">300000</integer>
</resources>

