<resources>
    <!-- The size of the manual tuner FAB. -->
    <dimen name="manual_tuner_fab_size">160dp</dimen>

    <!-- The default spacing for padding and margins in the radio application. -->
    <dimen name="radio_default_spacing">16dp</dimen>

    <!-- The padding within the FAB so that the icon within the FAB isn't too large. -->
    <dimen name="car_radio_fab_padding">48dp</dimen>

    <!-- The elevation for the FAB buttons in the radio. -->
    <dimen name="car_radio_fab_elevation">8dp</dimen>

    <!-- The top margin before the start of the radio's metadata and channel display. -->
    <dimen name="car_radio_container_top_padding">0dp</dimen>

    <!-- The margin below the radio station information (e.g. channel name). This margin is
         negative to move the text closer to the channel frequency. -->
    <dimen name="car_radio_band_display_margin_start">8dp</dimen>

    <!-- The width of the container that holds the current radio station metadata. -->
    <dimen name="car_radio_metadata_container_width">290dp</dimen>

    <!-- The top margin for the container that displays the current station and band. This value
         is negative in order to align the top of the channel text with the top of the metadata
         text. -->
    <dimen name="car_radio_station_top_margin">-16dp</dimen>

    <!-- The space between each of the items in the list of pre-scanend radio stations. This value
         is negative to account for the fact that the text already has its own padding and
         appear separated. However, the padding is too large, so the negative padding brings them
         closer. -->
    <dimen name="car_radio_channel_item_margin">-16dp</dimen>

    <!-- The text size for the radio station channel. -->
    <dimen name="car_radio_station_channel_text_size">96sp</dimen>

    <!-- The absolute size of the radio controls. This value minus the
         car_radio_controls_button_padding is the size of the icons within the button. -->
    <dimen name="car_radio_controls_button_size">88dp</dimen>

    <!-- Inner padding for the radio buttons. This value creates a touch target on the buttons that
         is wider than the icon size. -->
    <dimen name="car_radio_controls_button_padding">16dp</dimen>

    <!-- The height of each card that displays a user preset. -->
    <dimen name="car_preset_item_height">128dp</dimen>

    <!-- The radius of a rounded card in the preset activity. This value should be half the value of
         car_preset_item_height. -->
    <dimen name="car_preset_item_radius">64dp</dimen>

    <!-- The dimensions of the pill background behind each preset channel. -->
    <dimen name="car_preset_number_bg_width">160dp</dimen>
    <dimen name="car_preset_number_bg_height">76dp</dimen>

    <!-- The radius of the pill. This number should be half the value of
         car_preset_number_bg_height. -->
    <dimen name="car_preset_number_bg_radius">8dp</dimen>

    <!-- The total height of the container that holds the current radio card in the preset list. -->
    <dimen name="car_preset_container_height">176dp</dimen>

    <!-- The ending elevation for the container that the preset list scrolls under. -->
    <dimen name="car_preset_container_elevation">8dp</dimen>

    <!-- The size of the text displaying the current channel number in the presets activity. -->
    <dimen name="car_preset_current_channel_text_size">46sp</dimen>

    <!-- The space between the currently playing icon and the radio band -->
    <dimen name="car_preset_equalizer_padding">8dp</dimen>

    <!-- The spacing between the current radio channel and the current radio band in the preset
         list. -->
    <dimen name="car_preset_current_channel_separator">8dp</dimen>

    <!-- The absolute size of the play button in the radio in the presets activity. -->
    <dimen name="car_presets_play_button_size">112dp</dimen>

    <!-- The padding of the play button in the radio in the presets activity. -->
    <dimen name="car_presets_play_button_padding">16dp</dimen>

    <!-- The absolute size of the favorite button in the radio in the presets activity. -->
    <dimen name="car_preset_favorite_button_size">64dp</dimen>

    <!-- The size of the icon indicating that there is an error with loading the radio. -->
    <dimen name="radio_error_icon_size">146dp</dimen>

    <!-- The bottom margin separating the error icon and the error text. -->
    <dimen name="radio_error_icon_bottom_margin">24dp</dimen>

    <!-- The size of the text explaining there was an error loading the radio. -->
    <dimen name="radio_error_text_size">45sp</dimen>

    <!-- The width of the container that holds the current tuned station, done/delete buttons and
         the band selector. -->
    <dimen name="manual_tuner_container_width">320dp</dimen>

    <dimen name="manual_tuner_channel_text_size">96sp</dimen>

    <!-- The height of the container corresponding to manual_tuner_container_width. This height
         should equal to the height of the dialpad. This is equal to 4 * car_touch_target +
         3 * manual_tuner_dialpad_vertical_spacing. -->
    <dimen name="manual_tuner_container_height">288dp</dimen>

    <!-- The top margin for the back button. This value is negative to align the back button with
         the dialpad for visual purposes. -->
    <dimen name="manual_tuner_back_button_top_margin">-2dp</dimen>

    <!-- The top padding before the content within the manual tuner. -->
    <dimen name="manual_tuner_top_padding">@dimen/radio_default_spacing</dimen>
    <!-- The left padding before the content within the manual tuner. -->
    <dimen name="manual_tuner_left_padding">@dimen/radio_default_spacing</dimen>

    <!-- The size of the numbers in the manual tuner dialpad. -->
    <dimen name="manual_tuner_dialpad_text_size">64sp</dimen>

    <!-- The top margin for the dialpad. This value is negative to pull the dialpad up a bit
         for visual purposes. -->
    <dimen name="manual_tuner_dialpad_top_margin">-16dp</dimen>
</resources>
