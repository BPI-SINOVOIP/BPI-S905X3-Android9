<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_buttons_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/radio_default_spacing"
    android:paddingEnd="@dimen/radio_default_spacing"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/radio_presets_list"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/car_radio_controls_button_size"
        android:layout_weight="1"
        android:src="@drawable/ic_presets_list"
        style="@style/RadioButton" />

    <ImageButton
        android:id="@+id/radio_back_button"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/car_radio_controls_button_size"
        android:layout_weight="1"
        android:src="@drawable/ic_skip_previous"
        style="@style/RadioButton" />

    <com.android.car.radio.PlayPauseButton
        android:id="@+id/radio_play_button"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="@dimen/car_radio_controls_button_size"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/ic_play_pause_stop"
        style="@style/RadioButtonFab" />

    <ImageButton
        android:id="@+id/radio_forward_button"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/car_radio_controls_button_size"
        android:layout_weight="1"
        android:src="@drawable/ic_skip_next"
        style="@style/RadioButton" />

    <ImageButton
        android:id="@+id/radio_add_presets_button"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/car_radio_controls_button_size"
        android:layout_weight="1"
        android:src="@drawable/ic_star_empty"
        style="@style/RadioButtonPreset" />

</LinearLayout>
