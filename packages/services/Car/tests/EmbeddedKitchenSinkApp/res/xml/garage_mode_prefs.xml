<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:key="android.car.GARAGE_MODE_ENABLED"
        android:title="@string/garage_switch"
        android:summaryOn="@string/garage_enabled"
        android:summaryOff="@string/garage_disabled" />
    <ListPreference
        android:key="android.car.GARAGE_MODE_MAINTENANCE_WINDOW"
        android:title="@string/garage_limit"
        android:entries="@array/garage_limit_keys"
        android:entryValues="@array/garage_limit_values" />
    <Preference
        android:key="android.car.GARAGE_MODE_WAKE_UP_TIME"
        android:title="@string/regular_wake_up" />
</PreferenceScreen>