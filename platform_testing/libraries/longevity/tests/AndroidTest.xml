<configuration description="Config for Longevity platform tests library test cases">
    <option name="test-suite-tag" value="apct" />
    <option name="test-suite-tag" value="apct-instrumentation" />
    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true" />
        <option name="test-file-name" value="LongevityPlatformLibTests.apk" />
    </target_preparer>
    <test class="com.android.tradefed.testtype.AndroidJUnitTest" >
        <option name="package" value="android.longevity.platform.tests" />
        <option name="runtime-hint" value="1m30s" />
    </test>
</configuration>
