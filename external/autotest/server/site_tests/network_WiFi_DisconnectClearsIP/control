AUTHOR = 'wiley, pstew, quiche'
NAME = 'network_WiFi_DisconnectClearsIP'
TIME = 'SHORT'
TEST_TYPE = 'Server'
ATTRIBUTES = ('suite:wifi_matfunc, suite:wifi_matfunc_noservo,'
              'suite:wifi_matfunc_bcm4371')
DEPENDENCIES = 'wificell'

DOC = """
This test verifies that the DUT clears its IP configuration
after disconnecting from the router.
"""


def run(machine):
    host = hosts.create_host(machine)
    job.run_test('network_WiFi_DisconnectClearsIP',
                 host=host,
                 raw_cmdline_args=args)


parallel_simple(run, machines)
