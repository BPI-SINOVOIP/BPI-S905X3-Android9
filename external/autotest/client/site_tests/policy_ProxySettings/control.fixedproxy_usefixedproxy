NAME = 'policy_ProxySettings.fixedproxy_usefixedproxy'
ATTRIBUTES = 'suite:bvt-perbuild, suite:policy'
TIME = 'SHORT'
TEST_CATEGORY = 'General'
TEST_CLASS = 'enterprise'
