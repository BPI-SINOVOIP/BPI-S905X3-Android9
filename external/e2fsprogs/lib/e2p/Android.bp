cc_library {
    name: "libext2_e2p",
    host_supported: true,
    unique_host_soname: true,
    defaults: ["e2fsprogs-defaults"],
    srcs: [
        "feature.c",
        "fgetflags.c",
        "fsetflags.c",
        "fgetproject.c",
        "fsetproject.c",
        "fgetversion.c",
        "fsetversion.c",
        "getflags.c",
        "getversion.c",
        "hashstr.c",
        "iod.c",
        "ls.c",
        "mntopts.c",
        "parse_num.c",
        "pe.c",
        "pf.c",
        "ps.c",
        "setflags.c",
        "setversion.c",
        "uuid.c",
        "ostype.c",
        "percent.c",
    ],

    cflags: ["-Wno-error=attributes"],

    target: {
        windows: {
            include_dirs: [ "external/e2fsprogs/include/mingw" ],
            enabled: true,
            cflags: [
                "-Wno-unused-variable",
                "-Wno-unused-parameter",
            ],
            clang_cflags: [
                "-Wno-error=typedef-redefinition",
            ],
        },
    },

    header_libs: ["libext2-headers"],
    export_include_dirs: ["."],
    export_header_lib_headers: ["libext2-headers"],
}
