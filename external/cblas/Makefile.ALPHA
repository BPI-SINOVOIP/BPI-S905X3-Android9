#
# Makefile.ALPHA
#
#
# If you compile, change the name to Makefile.in.
#
#

#-----------------------------------------------------------------------------
# Shell
#-----------------------------------------------------------------------------

SHELL = /bin/sh

#-----------------------------------------------------------------------------
# Platform
#-----------------------------------------------------------------------------

PLAT = ALPHA

#-----------------------------------------------------------------------------
# Libraries and includs 
#-----------------------------------------------------------------------------

BLLIB = libblas.a
CBLIB = ../lib/cblas_$(PLAT).a

#-----------------------------------------------------------------------------
# Compilers 
#-----------------------------------------------------------------------------

CC = cc
FC = f77
LOADER = $(FC)

#-----------------------------------------------------------------------------
# Flags for Compilers 
#-----------------------------------------------------------------------------

CFLAGS = -std1 -I/usr/include -assume aligned_objects -DADD_
FFLAGS = -f -u
LOADFLAGS =

#-----------------------------------------------------------------------------
# Archive programs and flags 
#-----------------------------------------------------------------------------

ARCH = ar
ARCHFLAGS = r
RANLIB = ranlib
