cc_defaults {
    name: "eigen-defaults",
    srcs: [
        "single.cpp",
        "double.cpp",
        "complex_single.cpp",
        "complex_double.cpp",
        "xerbla.cpp",
        "f2c/complexdots.c",
        "f2c/srotm.c",
        "f2c/srotmg.c",
        "f2c/drotm.c",
        "f2c/drotmg.c",
        "f2c/lsame.c",
        "f2c/dspmv.c",
        "f2c/ssbmv.c",
        "f2c/chbmv.c",
        "f2c/sspmv.c",
        "f2c/zhbmv.c",
        "f2c/chpmv.c",
        "f2c/dsbmv.c",
        "f2c/zhpmv.c",
        "f2c/dtbmv.c",
        "f2c/stbmv.c",
        "f2c/ctbmv.c",
        "f2c/ztbmv.c",
        "f2c/d_cnjg.c",
        "f2c/r_cnjg.c",
    ],
    cflags: [
        "-Werror",
        "-Wno-unused-parameter"
    ],
    tidy_checks: [
        "-google-global-names-in-headers",
        "-misc-macro-parentheses",
        "-misc-misplaced-widening-cast",
    ],
    export_include_dirs: ["."],
}

cc_library_static {
    name: "libF77blas",
    vendor_available: true,
    defaults: ["eigen-defaults"],
    host_supported: true,
}

// Build Eigen using API 9 toolchain for RS Support lib.
cc_library_static {
    name: "libF77blasV8",
    defaults: ["eigen-defaults"],
    sdk_version: "9",
    stl: "c++_static",
}
