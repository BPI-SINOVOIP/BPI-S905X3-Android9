cc_binary_host {
    srcs: [
        "libkmod/libkmod.c",
        "libkmod/libkmod-file.c",
        "libkmod/libkmod-module.c",
        "libkmod/libkmod-config.c",
        "libkmod/libkmod-index.c",
        "libkmod/libkmod-elf.c",
        "libkmod/libkmod-list.c",
        "libkmod/libkmod-signature.c",
        "shared/array.c",
        "shared/scratchbuf.c",
        "shared/util.c",
        "shared/hash.c",
        "shared/strbuf.c",
        "tools/port.c",
        "tools/depmod.c",
        "tools/kmod.c",
        "tools/modinfo.c",
        "tools/rmmod.c",
        "tools/insert.c",
        "tools/log.c",
        "tools/modprobe.c",
        "tools/static-nodes.c",
        "tools/insmod.c",
        "tools/lsmod.c",
        "tools/remove.c",
    ],

    name: "depmod",
    local_include_dirs: ["port-gnu"],
    cflags: [
        "-include config.h",
        "-ffunction-sections",
        "-fdata-sections",
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
        "-Dsecure_getenv=getenv",
        "-DHAVE_CONFIG_H",
        "-DANOTHER_BRICK_IN_THE",
        "-DSYSCONFDIR=\"/tmp\"",
    ],
}
