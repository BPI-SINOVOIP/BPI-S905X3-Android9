   alias <LatG> = <G>;
   alias <LatH> = <H>;
   alias <LatJ> = <J>;
   alias <LatK> = <K>;
   alias <LatL> = <L>;

   alias <LatZ> = <Z>;
   alias <LatX> = <X>;
   alias <LatC> = <C>;
   alias <LatV> = <V>;
   alias <LatB> = <B>;
   alias <LatN> = <N>;
   alias <LatM> = <M>;
};

