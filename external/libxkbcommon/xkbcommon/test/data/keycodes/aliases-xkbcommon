
// keycode aliases for phonetic keyboard maps

default
xkb_keycodes "qwerty" {

   alias <LatQ> = <Q>;
   alias <LatW> = <W>;
   alias <LatE> = <E>;
   alias <LatR> = <R>;
   alias <LatT> = <T>;
   alias <LatY> = <Y>;
