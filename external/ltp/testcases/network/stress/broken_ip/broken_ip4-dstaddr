TCID=broken_ip4-dstaddr01
TST_TOTAL=1

. test_net.sh

tst_resm TINFO "Sending ICMPv4 with wrong dst address for $NS_DURATION sec"

tst_icmp -t $NS_DURATION -s "0 100 500 1000 1472" -i

tst_ping

tst_exit
