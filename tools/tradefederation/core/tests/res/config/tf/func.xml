<configuration
    description="Run the tradefed functional tests from build env">

   <target_preparer class="com.android.tradefed.targetprep.InstallBuildEnvApkSetup" >
        <option name="apk-name" value="TradeFedTestApp.apk" />
        <option name="apk-name" value="TradeFedUiTestApp.apk" />
    </target_preparer>
    <test class="com.android.tradefed.testtype.HostTest" />
    <logger class="com.android.tradefed.log.FileLogger" >
        <option name="log-level-display" value="debug" />
    </logger>
    <result_reporter class="com.android.tradefed.result.XmlResultReporter" />

</configuration>
