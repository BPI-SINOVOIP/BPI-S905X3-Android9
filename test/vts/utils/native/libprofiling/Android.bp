cc_library_shared {

    name: "libvts_profiling_utils",
    host_supported: true,

    srcs: ["VtsProfilingUtil.cpp"],

    shared_libs: [
        "libprotobuf-cpp-full",
    ],

    cflags: [
        "-Werror",
        "-Wall",
    ],

    export_include_dirs: ["."],
}

cc_library_shared {

    name: "libvts_profiling",

    srcs: ["VtsProfilingInterface.cpp"],

    shared_libs: [
        "libbase",
        "libcutils",
        "libhidlbase",
        "libprotobuf-cpp-full",
        "libvts_multidevice_proto",
        "libvts_profiling_utils",
    ],

    cflags: [
        "-Werror",
        "-Wall",
    ],

    multilib: {
        lib32: {
            ldflags: ["-Wl,--rpath,/data/local/tmp/32"],
        },
        lib64: {
            ldflags: ["-Wl,--rpath,/data/local/tmp/64"],
        },
    },

    export_include_dirs: ["."],
}

cc_binary {
    name: "vts_profiling_configure",

    srcs: ["VtsProfilingConfigureMain.cpp"],

    cflags: ["-Wall", "-Werror"],

    shared_libs: [
        "libbase",
        "libutils",
        "libcutils",
        "libhidlbase",
        "libhidltransport",
    ],
}
