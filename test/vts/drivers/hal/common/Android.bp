cc_library_shared {

    name: "libvts_common",
    host_supported: true,

    cflags: [
        "-Wall",
        "-Werror",
    ],

    srcs: [
        "utils/InterfaceSpecUtil.cpp",
        "utils/StringUtil.cpp",
    ],

    include_dirs: [
        "frameworks/native/include",
        "libcore",
        "system/core/include",
        "system/extras",
    ],

    local_include_dirs: ["include"],

    shared_libs: [
        "libbase",
        "libprotobuf-cpp-full",
        "libvts_multidevice_proto",
    ],

    export_include_dirs: ["include"],

    target: {
        android: {
            srcs: [
                "binder/VtsFuzzerBinderService.cpp",
                "component_loader/DllLoader.cpp",
                "component_loader/HalDriverLoader.cpp",
                "driver_base/DriverBase.cpp",
                "driver_base/DriverCallbackBase.cpp",
                "driver_manager/VtsHalDriverManager.cpp",
            ],
            shared_libs: [
                "libbinder",
                "libcutils",
                "libdl",
                "liblog",
                "libutils",
                "libvts_codecoverage",
                "libvts_drivercomm",
                "libvts_multidevice_proto",
            ],
        },
    },
}
