<configuration description="Runs VTS fuzz tests for Lights">
    <test class="com.android.tradefed.testtype.VtsFuzzTest">
      <option name="target-component-path" value="/system/lib/hw/lights.gce_x86.so" />
      <option name="target-class" value="hal_conventional" />
      <option name="target-type" value="light" />
      <option name="target-version" value="1.0" />
      <option name="epoch-count" value="100" />
    </test>
    <result_reporter class="com.android.tradefed.result.XmlResultReporter" />
</configuration>
