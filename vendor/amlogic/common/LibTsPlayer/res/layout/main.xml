<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#55000000"
    android:orientation="vertical" >

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="URL:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/urlText"
            android:text="/data/a.ts" />
    </LinearLayout>

	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
		<LinearLayout
	    android:layout_width="210dip"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	    <Button
	        android:id="@+id/play"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_play" />
            <requestFocus></requestFocus>
	    <Button
	        android:id="@+id/pause"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_pause" />
	    <Button
	        android:id="@+id/resume"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_resume" />
	    <Button
	        android:id="@+id/seek"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_seek" />
	    <Button
	        android:id="@+id/videoshow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_vshow" />
	    <Button
	        android:id="@+id/videohide"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_vhide" />
	    <Button
	        android:id="@+id/fast"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_fast" />
	    <Button
	        android:id="@+id/stopfast"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_stop_fast" />
	     <Button
	        android:id="@+id/stop"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_stop" />
	     <Button
	        android:id="@+id/setEPGSize"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_set_epg" />
	
	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="15sp"
	         android:text="@string/txt_func"
	         android:textAppearance="?android:attr/textAppearanceLarge" />
	
	     <TextView
	         android:id="@+id/textView3"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="15sp"
	         android:text="@string/txt_return"
	         android:textAppearance="?android:attr/textAppearanceLarge" />
	
	     <TextView
	         android:id="@+id/textView5"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="15sp"
	         android:text="@string/txt_result"
	         android:textAppearance="?android:attr/textAppearanceLarge" />
	      
		</LinearLayout>
		<LinearLayout
	    android:layout_width="210dip"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	       <Button
	        android:id="@+id/getVolume"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_g_vol" />
	      <Button
	        android:id="@+id/setVolume"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_s_vol" />
	      <Button
	        android:id="@+id/setRatio"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_s_ratio" />
	      <Button
	        android:id="@+id/getAudioBalance"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_g_ab" />
	      <Button
	        android:id="@+id/setAudioBalance"
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:text="@string/button_s_ab" />
	      <Button
	        android:id="@+id/getVideoPixels"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_g_vp" />
	       <Button
	        android:id="@+id/isSoftFit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_is_soft_fit" />
	       <Button
	        android:id="@+id/getPlayMode"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_g_playmode" />
	       <Button
	        android:id="@+id/switchAudioTrack"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_s_audio" />
	       <Button
	        android:id="@+id/switchSubtitle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/button_s_sub" />
	
	       <TextView
	           android:id="@+id/Function"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="15sp"
	           android:text="@string/txt_1_space"
	           android:textAppearance="?android:attr/textAppearanceLarge" />
	
	       <TextView
	           android:id="@+id/Return_t"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="15sp"
	           android:text="@string/txt_1_space"
	           android:textAppearance="?android:attr/textAppearanceLarge" />
	
	       <TextView
	           android:id="@+id/Result"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="15sp"
	           android:text="@string/txt_1_space"
	           android:textAppearance="?android:attr/textAppearanceLarge" />
	     
	    </LinearLayout>
		<FrameLayout
	    android:id="@+id/player_window_root"
	    android:layout_width="640dip"
   		android:layout_height="600dip"
	  	>	    
			  <SurfaceView 
			        android:id="@+id/SurfaceView01"  
			        android:layout_width="fill_parent" 
			        android:layout_height="fill_parent"/>  
<!--
			  <com.subtitleview.SubtitleView
		    	android:id="@+id/subTitle"
		    	android:layout_height="80dp"
		    	android:layout_width="fill_parent"
		    	android:layout_gravity="center_horizontal|bottom"
		    	android:paddingBottom="60dip">
		    </com.subtitleview.SubtitleView>
-->
		</FrameLayout>
	     
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="200dip"
	    android:layout_gravity="bottom"
	    android:orientation="horizontal" >
	    <TextView
	           android:id="@+id/resultView"
	           android:layout_width="fill_parent"
	           android:layout_height="20dip"
	           android:textSize="15sp"
	           android:singleLine="false"
	           android:text="@string/txt_1_space" />
	    </LinearLayout>
</LinearLayout>
