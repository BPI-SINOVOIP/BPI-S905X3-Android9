cc_binary {
    name: "droidvold",
    vendor: true,
    srcs: [
        "VolumeManager.cpp",
        "DroidVold.cpp",
        "NetlinkManager.cpp",
        "NetlinkHandler.cpp",
        "Process.cpp",
        "fs/Ext4.cpp",
        "fs/Vfat.cpp",
        "fs/Ntfs.cpp",
        "fs/Exfat.cpp",
        "fs/Hfsplus.cpp",
        "fs/Iso9660.cpp",
        "fs/Sdcardfs.cpp",
        "Disk.cpp",
        "VolumeBase.cpp",
        "PublicVolume.cpp",
        "ResponseCode.cpp",
        "logwrap.c",
        "Utils.cpp",
        "main.cpp",
    ],
    include_dirs: [
        "system/libhidl/transport/include/hidl",
        "external/libcxx/include",
        "system/core/include",
        "system/core/fs_mgr/include",
        "system/core/logwrapper/include",
        "system/core/fs_mgr/include_fstab",
        "external/e2fsprogs/lib",
    ],
    shared_libs: [
        "vendor.amlogic.hardware.droidvold@1.0",
        "libhidlbase",
        "libhidltransport",
        "libsysutils",
        "libcutils",
        "liblog",
        "libselinux",
        "libutils",
        "libbinder",
        "libbase",
        "libdroidblkid",
    ],
    static_libs: ["libfstab"],
    cflags: [
        "-DHAS_NTFS_3G",
        "-DHAS_VIRTUAL_CDROM",
        //"-Wno-missing-field-initializers",
        //"-Wno-unused-variable",
        //"-Wno-unused-parameter",
        "-std=c11",
    ],
    required: [
        "libdroidblkid",
        "libdroiduuid",
    ],
}

subdirs = [
    "lib",
]
