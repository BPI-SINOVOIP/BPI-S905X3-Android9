<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_single_item_dialog"
    android:layout_width="500dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@color/common_item_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="#B3EEEEEE"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_band_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_band_type"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_band_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:entries="@array/custom_single_double_entries"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/low_band_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/text_frequency1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_frequency1"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_frequency1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:shadowColor="@android:color/white"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_low_min_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_band_min"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_low_min_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:shadowColor="@android:color/white"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_low_max_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_band_max"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_low_max_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:shadowColor="@android:color/white"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/high_band_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/text_frequency2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_frequency2"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_frequency2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_high_min_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_band_min"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_high_min_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:shadowColor="@android:color/white"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_high_max_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/parameter_lnb_custom_band_max"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittext_high_max_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:shadowColor="@android:color/white"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@string/dialog_ok"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@string/dialog_cancel"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
