<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/function_key1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/circle_red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_red" />

        <TextView
            android:id="@+id/textView_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingRight="20dp"
            android:text="ADD"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/circle_blue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_blue" />

        <TextView
            android:id="@+id/textView_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingRight="20dp"
            android:text="SCAN"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/circle_yellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_yellow" />

        <TextView
            android:id="@+id/textView_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingRight="20dp"
            android:text="DELETE"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/circle_green"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_green" />

        <TextView
            android:id="@+id/textView_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="EDIT"
            android:textColor="#B3EEEEEE"
            android:textSize="14sp" />
    </LinearLayout>
