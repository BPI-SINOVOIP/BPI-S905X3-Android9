<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/morebarLayout"
    android:layout_gravity="center|bottom"
    android:background="@drawable/movie_play_bk"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_alignParentBottom="true">

    <ImageButton
        android:id="@+id/BackBtn"
        android:src="@drawable/barback"
        android:background="@drawable/btn_button"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/ResumeBtn"
        android:src="@drawable/resume"
        android:background="@drawable/btn_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/PlaymodeBtn"
        android:src="@drawable/mode"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/ChangetrackBtn"
        android:src="@drawable/change_track"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/SubtitleBtn"
        android:src="@drawable/fondsetup"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/ttPageBtn"
        android:src="@drawable/tt_page"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/ChapterBtn"
        android:src="@drawable/doc"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">
    </ImageButton>
	<ImageButton
        android:id="@+id/DisplayBtn"
        android:src="@drawable/diplay"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/BrightnessBtn"
        android:src="@drawable/brightness"
        android:background="@drawable/btn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/InfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:src="@drawable/info"
        android:background="@drawable/btn_button"
        android:gravity="center">
    </ImageButton>
    <ImageButton
        android:id="@+id/Play3DBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/play_3d"
        android:background="@drawable/btn_button"
        android:gravity="center"
        android:visibility="gone">
    </ImageButton>
    <ImageButton
        android:id="@+id/MoreSetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/more_set"
        android:background="@drawable/btn_button"
        android:gravity="center">
    </ImageButton>
</LinearLayout>
