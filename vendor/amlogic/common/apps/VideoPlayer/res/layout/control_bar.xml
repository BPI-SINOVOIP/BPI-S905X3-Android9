<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Control_Layer1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/SurfaceViewRoot"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true">
        <SurfaceView
            android:id="@+id/SurfaceView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true">
        </SurfaceView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/HdmiPic2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/hdmi_tx01"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/HdmiPic3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/hdmi_tx02"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/HdmiPic4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/hdmi_tx03"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

     <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/HdmiPic1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/hdmi_tx04"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/SubtitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/white"
            android:textSize="20dip">
        </TextView>

        <ImageView
            android:id="@+id/SubtitleIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dip">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/CertificationView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dip"
        android:layout_marginRight="30dip">
        <ImageView
            android:id="@+id/CertificationDoblyVision"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dobly_vision_gray"
            android:layout_marginTop="50dip"
            android:visibility="gone">
        </ImageView>
        <ImageView
            android:id="@+id/CertificationDobly"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dobly_gray"
            android:visibility="gone">
        </ImageView>
        <ImageView
            android:id="@+id/CertificationDoblyPlus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dobly_gray"
            android:visibility="gone">
        </ImageView>
        <ImageView
            android:id="@+id/CertificationDTS"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dts"
            android:visibility="gone">
        </ImageView>
        <ImageView
            android:id="@+id/CertificationDTSExpress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dts_express"
            android:visibility="gone">
        </ImageView>
        <ImageView
            android:id="@+id/CertificationDTSHDMasterAudio"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/certifi_dts_hd"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="63dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@drawable/movie_play_bk"
        android:orientation="vertical"
        android:id="@+id/infobarLayout"
        android:gravity="bottom|center"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/CurTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/str_time_null"
                    android:layout_weight="1">
                </TextView>
                <SeekBar
                    style="@android:style/Widget.Holo.SeekBar"
                    android:id="@+id/SeekBar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="25">
                </SeekBar>
                <TextView
                    android:id="@+id/TotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_time_null"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="4dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/backtofold"
                    android:background="@drawable/btn_button"
                    android:id="@+id/BrowserBtn"
                    android:gravity="center">
                </ImageButton>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/previous"
                    android:background="@drawable/btn_button"
                    android:id="@+id/PreBtn"
                    android:gravity="center">
                </ImageButton>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/FastReverseBtn"
                    android:src="@drawable/rewind"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>
                <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/PlayBtn"
                    android:src="@drawable/play"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/FastForwardBtn"
                    android:src="@drawable/ff"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/NextBtn"
                    android:src="@drawable/next"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>

                <ImageButton
                    android:id="@+id/Play3DBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/play_3d"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/moreBtn"
                    android:src="@drawable/more"
                    android:background="@drawable/btn_button"
                    android:gravity="center">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Control_Layer2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout_sub"
            android:orientation="vertical"
            android:background="@drawable/minding_bk"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_title"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/TextView01"
                    android:gravity="center"
                    android:layout_height="56dp"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:text="@string/setting_subtitle"
                    android:textColor="@drawable/white">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_switch"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/TextView01"
                    android:gravity="left|center"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:textSize="24sp"
                    android:text="@string/sub_switch"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/switch_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <TextView
                    android:layout_width="94dp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:id="@+id/sub_swith111"
                    android:textSize="24sp"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/switch_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subtitle_info"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/sub_info"
                    android:gravity="left|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="24sp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black"
                    android:visibility="gone">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_font"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:textSize="24sp"
                    android:text="@string/sub_font"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black"
                    android:id="@+id/font_title">
                </TextView>
                <ImageButton
                    android:id="@+id/font_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:id="@+id/sub_font111"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/font_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_color"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:textSize="24sp"
                    android:text="@string/sub_color"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black"
                    android:id="@+id/color_title">
                </TextView>
                <ImageButton
                    android:id="@+id/color_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:id="@+id/sub_color111"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/color_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_position_v"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:textSize="24sp"
                    android:text="@string/sub_position_v"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black"
                    android:id="@+id/position_v_title">
                </TextView>
                <ImageButton
                    android:id="@+id/position_v_l"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:id="@+id/sub_position_v111"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/position_v_r"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sub_ok_on"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center" >
                <Button
                    android:id="@+id/button_ok"
                    android:text="@string/str_ok"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@drawable/black">
                </Button>
                <Button
                    android:id="@+id/button_canncel"
                    android:text="@string/str_cancel"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@drawable/black">
                </Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout_ttPage"
            android:orientation="vertical"
            android:background="@drawable/minding_bk"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttPage_title"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/TextView01"
                    android:gravity="center"
                    android:layout_height="56dp"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:text="@string/setting_ttPage"
                    android:textColor="@drawable/white">
                </TextView>
            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instruction"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/operations_instruciton"
                android:gravity="center"
                android:layout_height="56dp"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:text="@string/operation_instruciton"
                android:textColor="@drawable/red">
            </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gotoPage"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/TextView01"
                    android:gravity="left|center"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:textSize="24sp"
                    android:text="@string/gotoPage"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black">
                </TextView>

                <EditText
                    android:id="@+id/tt_page_no"
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="24sp"
                    android:text="888"
                    android:textColor="@drawable/red">
                 </EditText>
                 <EditText
                     android:id="@+id/tt_sub_page_no"
                     android:layout_width="94dp"
                     android:layout_height="60dp"
                     android:ems="10"
                     android:inputType="textPersonName"
                     android:textSize="24sp"
                     android:text="0" >
                  </EditText>
                  <Button
                      android:id="@+id/tt_button_ok"
                      android:text="@string/str_ok"
                      android:layout_width="120dp"
                      android:layout_gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:textColor="@drawable/black">
                  </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextPage"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/TextView02"
                    android:gravity="left"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:textSize="24sp"
                    android:text="@string/nextPage"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/tt_last_page"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <ImageButton
                    android:id="@+id/tt_next_page"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_Sub_Page"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/TextView03"
                    android:gravity="left"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:textSize="24sp"
                    android:text="@string/nextSubPage"
                    android:layout_marginLeft="6dp"
                    android:textColor="@drawable/black">
                </TextView>
                <ImageButton
                    android:id="@+id/tt_last_sub_page"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_larrow">
                </ImageButton>
                <ImageButton
                    android:id="@+id/tt_next_sub_page"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sub_rarrow">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gohome"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tt_btn"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center" >
                <Button
                    android:id="@+id/tt_button_canncel"
                    android:text="@string/str_cancel"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@drawable/black">
                </Button>
                <Button
                    android:id="@+id/go_home"
                    android:text="@string/gohome"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@drawable/black">
                </Button>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_other"
            android:orientation="vertical"
            android:background="@drawable/minding_bk"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/more_title"
                android:layout_gravity="center"
                android:layout_height="56dp"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:textSize="24sp">
            </TextView>
            <ListView
                android:id="@+id/ListView"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:divider="@color/background"
                android:cacheColorHint="#00000000"
                android:gravity="center">
            </ListView>
            <LinearLayout
                android:id="@+id/audio_dts_drc"
                android:layout_width="340dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <SeekBar
                android:id="@+id/seekbar_dts_drc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:max="100"/>
            <TextView
                android:id="@+id/dts_drc"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@drawable/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/audio_offset"
                android:layout_width="340dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <SeekBar
                android:id="@+id/seekbar_audio_offset"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:max="40"/>
            <TextView
                android:id="@+id/text_audio_offset"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@drawable/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout"
            android:orientation="vertical"
            android:background="@drawable/dialog_bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/info_title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:textColor="@drawable/white"
                android:textSize="20sp">
            </TextView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">
                <TextView
                    android:id="@+id/filename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp">
                </TextView>
                <TextView
                    android:id="@+id/filetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp">
                </TextView>
                <TextView
                    android:id="@+id/filesize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp">
                </TextView>
                <TextView
                    android:id="@+id/resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp">
                </TextView>
                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="52dp">
                <Button
                    android:id="@+id/info_ok"
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:textSize="20sp">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/morebar" />
    </RelativeLayout>
</RelativeLayout>
