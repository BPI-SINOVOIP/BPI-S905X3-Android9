<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_hdmi_audio_latency"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/hdmi_audio_latency"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_title"
        android:layout_marginTop="@dimen/pq_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <TextView
        android:id="@+id/text_audio_latency"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/hdmi_audio_latency"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/seekbar_audio_latency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="40"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
</LinearLayout>
