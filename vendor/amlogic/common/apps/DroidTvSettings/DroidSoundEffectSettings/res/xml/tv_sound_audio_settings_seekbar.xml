<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_audio_delay_and_prescale"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_title"
        android:layout_marginTop="@dimen/pq_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <TextView
        android:id="@+id/id_text_view_audio_delay_speaker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_audio_delay_speaker"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_audio_delay_speaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/id_text_view_audio_delay_spdif"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_audio_delay_spdif"
        android:focusable="false"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_audio_delay_spdif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/id_text_view_audio_prescale"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_audio_prescale"
        android:focusable="false"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_audio_prescale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="300"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
</LinearLayout>
