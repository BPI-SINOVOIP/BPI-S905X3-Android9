<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/tv_sound_agc"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_title"
        android:layout_marginTop="@dimen/pq_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tv_sound_agc_enable"
            android:layout_weight="2"
            android:focusable="false"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />

        <CheckBox
            android:id="@+id/checkbox_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center" />
    </LinearLayout>
    <TextView
        android:id="@+id/text_max_level"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/tv_sound_agc_max_level"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/seekbar_max_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/text_attrack_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/tv_sound_agc_attrack_time"
        android:focusable="false"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/seekbar_attrack_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="19"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/text_release_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/tv_sound_agc_release_time"
        android:focusable="false"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/seekbar_release_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
</LinearLayout>
