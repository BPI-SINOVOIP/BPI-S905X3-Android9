<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_dbx"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_title"
        android:layout_marginTop="@dimen/pq_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <TextView
        android:id="@+id/id_text_view_tv_dbx_param_sonics"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_dbx_param_sonics"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_tv_dbx_param_sonics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/id_text_view_tv_dbx_param_volume"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_dbx_param_volume"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_tv_dbx_param_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
    <TextView
        android:id="@+id/id_text_view_tv_dbx_param_surround"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/title_tv_dbx_param_surround"
        android:focusable="false"
        android:textSize="@dimen/pq_seekbar_item"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/pq_seekbar_item_marginLeft"
        />
    <SeekBar
        android:id="@+id/id_seek_bar_tv_dbx_param_surround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2"
        android:layout_marginTop="@dimen/pq_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/pq_seekbar_item_marginBottom"
        />
</LinearLayout>
