            <intent-filter>
                <action android:name="android.media.tv.TvInputService" />
            </intent-filter>
            <meta-data android:name="android.media.tv.input"
                android:resource="@xml/spdifinputservice" />
        </service>

        <service android:name=".services.TvScanService" >
            <intent-filter>
                <action android:name="com.droidlogic.tvinput.services.TvScanService" />
            </intent-filter>
        </service>

        <service android:name=".services.AudioEffectsService">
            <intent-filter>
                <action android:name="com.droidlogic.tvinput.services.AudioEffectsService" />
            </intent-filter>
        </service>

        <service
            android:name=".services.AUXInputService"
            android:permission="android.permission.BIND_TV_INPUT" >
            <intent-filter>
                <action android:name="android.media.tv.TvInputService" />
            </intent-filter>
            <meta-data android:name="android.media.tv.input"
                android:resource="@xml/auxinputservice" />
