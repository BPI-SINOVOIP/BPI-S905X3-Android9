                <action android:name="android.media.tv.TvInputService" />
            </intent-filter>
            <meta-data android:name="android.media.tv.input"
                android:resource="@xml/arcinputservice" />
        </service>

        <receiver android:name=".services.TvScanServiceReceiver">
             <intent-filter>
