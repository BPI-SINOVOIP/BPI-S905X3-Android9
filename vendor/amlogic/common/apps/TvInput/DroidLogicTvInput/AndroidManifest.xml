             </intent-filter>
        </receiver>

        <activity
            android:name=".settings.TvSettingsActivity"
            android:stateNotNeeded="true"
            android:label="@string/app_name"
            android:theme="@style/Settings_style"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".shortcut.ShortCutActivity"
            android:launchMode="singleInstance"
            android:label="@string/app_name"
            android:theme="@style/shortcut_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.ChannelSearchActivity"
            android:stateNotNeeded="true"
            android:label="@string/app_name"
            android:theme="@style/Settings_style"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.HdmiExtendSetupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
