<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/manual_search"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <LinearLayout
        android:id="@+id/atv_dtv_swith_manual"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dtv_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dtv"
            android:textSize="20sp"
            android:textColor="@color/color_text_item"
            android:layout_marginLeft="40dp"
            />
         <Switch
            android:id="@+id/sw_dtv_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/tv_atv_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/atv"
            android:textSize="20sp"
            android:textColor="@color/color_text_item"
            />
         <Switch
            android:id="@+id/sw_atv_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:focusable="true"/>
    </LinearLayout>

    <!--<RadioGroup
        android:id="@+id/dtv_radio_group_manual"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/rb_standard_manual"
            android:text="@string/standard"
            android:textColor="@color/color_text_item"
            android:checked="true"
            android:layout_marginLeft="40dp"
            android:focusable="true"/>
        <RadioButton
            android:id="@+id/rb_lrc_manual"
            android:text="@string/lrc"
            android:textColor="@color/color_text_item"
            android:layout_marginLeft="40dp"
            android:focusable="true"/>
    </RadioGroup>-->
    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel"
                android:textSize="18sp"
                android:textColor="@color/color_text_prompt"
            />
            <com.droidlogic.tvinput.settings.OptionEditText
                android:id="@+id/manual_search_dtv_channel_manual"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/color_text_edit"
                android:textColorHint="@color/color_text_hint"
                android:hint="@string/default_begin_channel"
                android:maxLength="7"
                android:inputType="number"
              />
         </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/manual_search_dtv_start_frequency_manual"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:text="@string/start_frequency_default_atsc"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/manual_search_start_dtv_manual"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:nextFocusDown="@+id/manual_search_dtv_info"
        android:text="@string/start_search"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_text_item"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <com.droidlogic.tvinput.settings.OptionListView
        android:id="@+id/manual_search_dtv_info_manual"
        android:layout_width="262dp"
        android:layout_height="150dp"
        android:layout_marginLeft="31dp"
        android:nextFocusUp="@+id/manual_search_start_dtv"
        android:listSelector="@drawable/item_background"
        android:divider="@color/transparent"
        />
</LinearLayout>
