<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/aspect_ratio"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/apect_ratio_auto"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/auto"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/apect_ratio_four2three"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/four2three"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/apect_ratio_panorama"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/panorama"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
        <!-- android:visibility="gone" -->
    <TextView
        android:id="@+id/apect_ratio_full_screen"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/full_screen"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
</LinearLayout>
