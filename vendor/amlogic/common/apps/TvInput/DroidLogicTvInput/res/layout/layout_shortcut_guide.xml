<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="950dp"
        android:layout_height="520dp"
        android:background="@drawable/bg_guide"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <TextView
                android:id="@+id/guide_date"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_blue_1"
                />
            <TextView
                android:id="@+id/guide_week"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_blue_1"
                />
            <TextView
                android:id="@+id/guide_program"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/program_guide"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_blue_1"
                />
            <TextView
                android:id="@+id/guide_program_details"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/program_information"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_blue_1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            >
            <com.droidlogic.tvinput.shortcut.GuideListView
                android:id="@+id/list_guide_channel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:nextFocusRight="@+id/list_guide_week"
                android:listSelector="@drawable/item_background"
                />
            <com.droidlogic.tvinput.shortcut.GuideListView
                android:id="@+id/list_guide_week"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:nextFocusLeft="@+id/list_guide_channel"
                android:nextFocusRight="@+id/list_guide_programs"
                android:divider="@color/divider_1"
                android:dividerHeight="1px"
                android:listSelector="@drawable/item_background"
                />
            <com.droidlogic.tvinput.shortcut.GuideListView
                android:id="@+id/list_guide_programs"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:nextFocusLeft="@+id/list_guide_week"
                android:listSelector="@drawable/item_background"
                />
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/guide_details_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/no_information"
                    android:textSize="22sp"
                    android:textColor="@color/color_text_blue_1"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

