<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/manual_search"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        >
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/channel"
		        android:textSize="20sp"
		        android:textColor="@color/color_text_prompt"
		        />
		    <com.droidlogic.tvinput.settings.OptionEditText
                android:id="@+id/manual_search_dtv_channel"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:gravity="center"
		        android:textSize="22sp"
		        android:textColor="@color/color_text_edit"
		        android:textColorHint="@color/color_text_hint"
		        android:hint="@string/default_begin_channel"
		        android:maxLength="7"
		        android:inputType="number"
		        />
	    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/manual_search_dtv_start_frequency"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:text="@string/start_frequency_default"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/manual_search_start_dtv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:nextFocusDown="@+id/manual_search_dtv_info"
        android:text="@string/start_search"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="100dp"
        android:layout_marginLeft="31dp"
        >
	    <ImageView
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_centerInParent="true"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="@color/color_text_item"
	        android:textSize="26sp"
	        android:textStyle="bold"
	        />
    </RelativeLayout>
    <com.droidlogic.tvinput.settings.OptionListView
        android:id="@+id/manual_search_dtv_info"
        android:layout_width="262dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:nextFocusUp="@+id/manual_search_start_dtv"
        android:listSelector="@drawable/item_background"
        android:divider="@color/transparent"
        />
</LinearLayout>
