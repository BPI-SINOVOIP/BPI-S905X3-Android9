<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/channel_edit"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/channel_edit_tv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/tv"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/channel_edit_radio"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/radio"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <com.droidlogic.tvinput.settings.OptionListView
        android:id="@+id/channnel_edit_list"
        android:layout_width="262dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:listSelector="@drawable/item_background"
        android:divider="@color/transparent"
        />
    <include
        android:id="@+id/channel_edit_operations"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        layout="@layout/layout_channel_channel_edit_operations" />
    <include
        android:id="@+id/channel_edit_editname"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        layout="@layout/layout_channel_channel_edit_editname" />
</LinearLayout>
