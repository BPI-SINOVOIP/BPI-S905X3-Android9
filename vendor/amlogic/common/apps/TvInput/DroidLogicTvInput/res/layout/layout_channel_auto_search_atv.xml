<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/auto_search"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/auto_search_start_atv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/start_search"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="31dp"
        >
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="@color/color_text_item"
	        android:textSize="26sp"
	        android:textStyle="bold"
	        />
    </RelativeLayout>
    <TextView
        android:id="@+id/auto_search_frequency_atv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:textSize="22sp"
        android:textColor="@color/color_text_prompt"
        />
    <TextView
        android:id="@+id/auto_search_frequency_band_atv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:textSize="22sp"
        android:textColor="@color/color_text_prompt"
        />
    <TextView
        android:id="@+id/auto_search_searched_number_atv"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:gravity="center"
        android:background="@drawable/item_background"
        android:textSize="22sp"
        android:textColor="@color/color_text_prompt"
        />
</LinearLayout>
