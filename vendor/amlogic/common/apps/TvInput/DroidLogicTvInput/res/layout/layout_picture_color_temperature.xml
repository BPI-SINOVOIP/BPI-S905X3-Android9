<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/color_temperature"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/color_temperature_standard"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/standard"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/color_temperature_warm"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/warm"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/color_temperature_cool"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/cool"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
</LinearLayout>
