<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="15dp"
        android:text="@string/sound_mode"
        android:textSize="27sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/sound_mode_standard"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/standard"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/sound_mode_music"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/music"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/sound_mode_news"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/news"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/sound_mode_movie"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/movie"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
    <TextView
        android:id="@+id/sound_mode_user"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="31dp"
        android:paddingLeft="50dp"
        android:background="@drawable/item_background"
        android:focusable="true"
        android:text="@string/user"
        android:textSize="26sp"
        android:textColor="@color/color_text_item"
        />
</LinearLayout>
