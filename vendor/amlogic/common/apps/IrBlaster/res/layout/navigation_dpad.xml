<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/normal_bg">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_weight="0.33">
    <ImageButton android:src="@drawable/navi_up"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:visibility="invisible"
                 android:layout_weight="0.33"
                 android:layout_marginBottom="@dimen/navi_dpad_margin"
                />
    <com.droidlogic.smartremote.ui.RemoteImageButton
                 android:src="@drawable/navi_up"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:id="@+id/navagation_up"
                 android:layout_weight="0.34"
                 android:layout_marginBottom="@dimen/navi_dpad_margin"
                />
    <ImageButton android:src="@drawable/navi_up"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:visibility="invisible"
                 android:layout_weight="0.33"
                 android:layout_marginBottom="@dimen/navi_dpad_margin"
                />
</LinearLayout>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_weight="0.34">
    <com.droidlogic.smartremote.ui.RemoteImageButton
                 android:src="@drawable/navi_left"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginRight="@dimen/navi_dpad_margin"
                 android:id="@+id/navagation_left"
                 android:layout_weight="0.33"
                />
    <com.droidlogic.smartremote.ui.RemoteImageButton
                 android:src="@drawable/navi_ok"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0.34"
                 android:id="@+id/navagation_ok"
                 android:layout_marginLeft="@dimen/navi_dpad_margin"
                 android:layout_marginRight="@dimen/navi_dpad_margin"
                />
    <com.droidlogic.smartremote.ui.RemoteImageButton
                 android:src="@drawable/navi_right"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="@dimen/navi_dpad_margin"
                 android:layout_weight="0.33"
                 android:id="@+id/navagation_right"
                />
</LinearLayout>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_weight="0.33">
    <ImageButton android:src="@drawable/navi_down"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:visibility="invisible"
                 android:layout_weight="0.33"
                 android:layout_marginTop="@dimen/navi_dpad_margin"
                />
    <com.droidlogic.smartremote.ui.RemoteImageButton
                 android:src="@drawable/navi_down"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0.34"
                 android:id="@+id/navagation_down"
                 android:layout_marginTop="@dimen/navi_dpad_margin"
                />
    <ImageButton android:src="@drawable/navi_down"
                 android:background="@drawable/normal_bg"
                 android:scaleType="center"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:visibility="invisible"
                 android:layout_weight="0.33"
                 android:layout_marginTop="@dimen/navi_dpad_margin"
                />
</LinearLayout>
</LinearLayout>