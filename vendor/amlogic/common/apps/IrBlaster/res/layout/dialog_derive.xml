<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal_bg">
<LinearLayout  android:layout_width="match_parent"
    		   android:layout_height="match_parent"
    		   android:id="@+id/prograss_zone"
    		   android:orientation="vertical"
    		   android:layout_gravity="center"
    		 
    >
    <ProgressBar android:layout_width="wrap_content"
    		   	 android:layout_height="wrap_content"
    		   	 android:layout_margin="16dip"
    		   	 android:layout_gravity="center_horizontal"
    		   	 />
    <TextView android:layout_width="wrap_content"
    		  android:layout_height="wrap_content"
    		  android:layout_gravity="center_horizontal"
    		  android:layout_margin="6dip"
    		  android:gravity="center"
    		  android:textColor="#ffffffff"
    		  android:text="@string/deriving"
    		  />
</LinearLayout>  
<LinearLayout  android:layout_width="match_parent"
    		   android:layout_height="match_parent"
    		   android:id="@+id/result_zone"
    		   android:visibility="gone"
    		   android:orientation="vertical"
    		   android:layout_gravity="center" >
    
<TextView android:layout_width="wrap_content"
    	  android:layout_height="wrap_content"
    	  android:background="@drawable/normal_bg"
          android:layout_gravity="center_horizontal"
          android:layout_margin="12dip"
    	  android:gravity="center"
    	  android:textColor="#ffffffff"
    	  android:id="@+id/prograss_text"
    	  android:text="@string/deriving"
    		  /> 
 <Button  android:layout_width="80dip"
    	  android:layout_height="38dip"
    	  android:layout_margin="6dip"
    	  android:background="@drawable/key_bg"
          android:layout_gravity="center_horizontal"
    	  android:gravity="center"
    	  android:textColor="#ffffffff"
    	  android:id="@+id/prograss_bt"
    	  android:text="@string/ok"
    		  /> 
</LinearLayout>

<RelativeLayout android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    >
        <Button android:layout_width="88dip"
    	        android:layout_height="1dip"
    	        android:background="@drawable/normal_bg"
    	        android:layout_alignParentLeft="true"
    	        android:layout_marginLeft="32dip"
    	        />
        <Button android:layout_width="88dip"
    	        android:layout_height="1dip"
    	        android:background="@drawable/normal_bg"
    	        android:layout_alignParentRight="true"
    	        android:layout_marginRight="32dip"
    	        />
</RelativeLayout>
</FrameLayout>