<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/request_pane_camera_spinner"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/request_pane_camera_prompt" />
        <Spinner
            android:id="@+id/request_pane_template_spinner"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/request_pane_template_prompt" />
    </LinearLayout>

    <!-- FIXME: Should not have a ListView in a scrollable view, need to rethink layout -->
    <ListView android:id="@+id/request_pane_output_listview"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/request_pane_capture_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/request_pane_capture_button" />
        <Button
            android:id="@+id/request_pane_repeat_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/request_pane_repeat_button" />
    </LinearLayout>
</merge>
