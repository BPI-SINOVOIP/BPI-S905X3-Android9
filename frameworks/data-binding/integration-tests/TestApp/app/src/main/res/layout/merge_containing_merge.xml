<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="innerObject" type="android.databinding.testapp.vo.NotBindableVo"/>
        <variable name="innerValue" type="java.lang.String"/>
    </data>
    <merge>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <include android:id="@+id/merge1" layout="@layout/merge_layout"
                     bind:innerObject="@{innerObject}"
                     bind:innerValue="@{`1 ` + innerValue}"/>
            <include android:id="@+id/merge2" layout="@layout/merge_layout"
                     bind:innerObject="@{innerObject}"
                     bind:innerValue="@{`2 ` + innerValue}"/>
        </LinearLayout>
    </merge>
</layout>