cc_library_shared {
    // Real drivers would set this to vulkan.$(TARGET_BOARD_PLATFORM)
    name: "vulkan.default",
    proprietary: true,
    relative_install_path: "hw",

    clang: true,
    cflags: [
        "-fvisibility=hidden",
        "-fstrict-aliasing",
        "-DLOG_TAG=\"vknulldrv\"",
        "-Weverything",
        "-Werror",
        "-Wno-padded",
        "-Wno-undef",
        "-Wno-zero-length-array",

        "-DLOG_NDEBUG=0",
    ],
    cppflags: [
        "-std=c++1y",
        "-Wno-c++98-compat-pedantic",
        "-Wno-c99-extensions",
    ],

    srcs: [
        "null_driver.cpp",
        "null_driver_gen.cpp",
    ],

    header_libs: ["vulkan_headers"],
    shared_libs: ["liblog"],
}
